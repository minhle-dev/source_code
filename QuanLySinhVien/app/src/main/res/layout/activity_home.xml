<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical"
    android:background="@drawable/gradient_backgroud">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_login"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xin chào: "
            android:textColor="@color/white"
            android:fontFamily="serif-monospace"
            android:textSize="20sp"
            android:layout_marginTop="78dp"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/tvNguoidung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="monospace"
            android:textSize="20sp"
            android:layout_marginTop="78dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUẢN LÝ SINH VIÊN"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:textSize="25sp"
        android:fontFamily="monospace"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:padding="10dp">

        <Button
            android:id="@+id/btnAddLop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_bg"
            android:text="Thêm lớp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:onClick="AddLop"
            />

        <Button
            android:id="@+id/btnListLop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_bg"
            android:text="Danh sách lớp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:onClick="onListLop"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="10dp">
        <Button
            android:id="@+id/btnQLSV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_bg"
            android:text="Quản lý sinh viên"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:onClick="onQLSV"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btnDangXuat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ĐĂng xuất"
        android:textColor="@color/white"
        android:background="@drawable/et_bg"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:onClick="xuLyDangXuat"/>
</LinearLayout>