<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_backgroud"
    android:padding="30dp">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_login"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ĐĂNG KÝ"
        android:textSize="35dp"
        android:fontFamily="serif-monospace"
        android:textColor="@color/white"
        android:paddingTop="20dp"/>
    <EditText
        android:id="@+id/edtTaiKhoanDangKy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg"
        android:hint="   Nhập tên tài khoản"
        android:layout_marginTop="70dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="15dp"/>

    <EditText
        android:id="@+id/edtNhapMatKhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg"
        android:hint="   Nhập mật khẩu"
        android:layout_marginTop="40dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:paddingLeft="15dp"
        />
    <EditText
        android:id="@+id/edtNhapLaiMatKhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg"
        android:hint="   Nhập lại mật khẩu"
        android:layout_marginTop="40dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:paddingLeft="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btnDangKi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng Ký"
            android:background="@drawable/et_bg"
            android:textColor="@color/white"
            android:layout_marginRight="30dp"
            android:onClick="XyLyDangKyTK"
            />

        <Button
            android:id="@+id/btnThoat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thoát"
            android:background="@drawable/et_bg"
            android:textColor="@color/white"
            android:onClick="thoatDangKy"
            />
    </LinearLayout>



</LinearLayout>
