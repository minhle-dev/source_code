<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_backgroud"
    android:padding="15dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã lớp:"
            android:textColor="@color/white"
            android:textSize="22sp"/>

        <EditText
            android:id="@+id/edtMaLop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập vào mã lớp"
            android:paddingLeft="15dp"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên lớp:"
            android:textColor="@color/white"
            android:textSize="22sp"/>

        <EditText
            android:id="@+id/edtTenLop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập vào tên lớp"
            android:paddingLeft="15dp"
            android:textColor="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <Button
            android:id="@+id/btnXoaTrang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/et_bg"
            android:text="Xóa trắng"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:onClick="onXoaTrang"/>
        <Button
            android:id="@+id/btnLuuLop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_bg"
            android:text="Lưu lớp"
            android:textColor="@color/white"
            android:onClick="onThemLop"/>

    </LinearLayout>

</LinearLayout>